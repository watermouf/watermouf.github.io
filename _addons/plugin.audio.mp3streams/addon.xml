<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.mp3streams" name="MP3 Streams" version="0.0.0.1" provider-name="kinkin, art by Marquerite">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="repository.Kinkin" />
    </requires>
	
    <extension point="xbmc.python.pluginsource"
               	library="default.py">
        <provides>audio</provides>
    </extension>
	
	
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>A music streaming collection</summary>
        <description>Browse and stream your favourite songs and albums</description>
    </extension>
	
</addon>